<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tddp2.grupo2.linkup.activity.LinksActivity">

    <RelativeLayout
            android:id="@+id/candidateNameAndAgeTextContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">

        <LinearLayout
                android:id="@+id/linkInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <include
                    android:id="@+id/linkCard"
                    layout="@layout/card_link" />
        </LinearLayout>
        <LinearLayout
                android:layout_below="@+id/linkInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <include
                    android:id="@+id/linkButtons"
                    layout="@layout/link_buttons" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
