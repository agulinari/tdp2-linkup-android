<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/link_card_side_margin"
    android:layout_marginRight="@dimen/link_card_side_margin"
    android:backgroundTint="@color/profileCard"
    card_view:cardElevation="4dp">

    <LinearLayout
            android:id="@+id/linkWork"
            android:orientation="horizontal"
            android:layout_below="@+id/userNameAndAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="5dp">
        <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                app:srcCompat="@drawable/ic_card_travel_black_24dp"
                android:id="@+id/workIcon" android:layout_gravity="center"/>
        <TextView
                android:text="Occupation"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/linkWorkText"
                android:layout_weight="1" android:layout_gravity="center"/>
    </LinearLayout>
</android.support.v7.widget.CardView>