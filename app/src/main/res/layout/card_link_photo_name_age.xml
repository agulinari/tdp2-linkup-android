<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:backgroundTint="@color/profileCard"
    android:orientation="horizontal"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:paddingBottom="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <ImageView
                android:id="@+id/linkImage"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop" />
            <ProgressBar
                android:id="@+id/linkImageProgress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"/>
            <ImageButton
                    android:layout_above="@+id/candidateNameAndAgeTextContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" card_view:srcCompat="@drawable/arrow_right"
                    android:layout_alignParentEnd="true"
                    android:paddingBottom="2dp"
                    android:id="@+id/linkArrowRight" android:backgroundTint="@android:color/transparent"/>
            <ImageButton
                    android:layout_above="@+id/candidateNameAndAgeTextContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" card_view:srcCompat="@drawable/arrow_left"
                    android:layout_alignParentStart="true"
                    android:paddingBottom="2dp"
                    android:id="@+id/linkArrowLeft" android:backgroundTint="@android:color/transparent"/>
            <RelativeLayout
                    android:id="@+id/candidateNameAndAgeTextContainer"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:background="@android:drawable/screen_background_dark_transparent">

                <TextView
                        android:id="@+id/linkName"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:gravity="center_vertical"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp"
                        android:text="Nombre"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>